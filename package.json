{
  "name": "chess-platform",
  "version": "1.0.0",
  "description": "A comprehensive chess game platform with multiple play modes and full chess rule implementation",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "webpack serve --mode development --open",
    "dev:server": "nodemon --ext ts,json --exec \"ts-node --project tsconfig.server.json src/server/index.ts\"",
    "start": "node dist/server/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "chess",
    "game",
    "typescript",
    "websocket",
    "stockfish"
  ],
  "author": "Chess Platform Team",
  "license": "MIT",
  "dependencies": {
    "chess.js": "^1.0.0-beta.6",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "stockfish": "^16.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.47.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sass": "^1.92.1",
    "sass-loader": "^13.3.2",
    "socket.io-client": "^4.7.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}
